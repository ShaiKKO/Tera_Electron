{
  "name": "terraflux",
  "version": "0.1.0",
  "description": "Colony simulation and exploration game inspired by RimWorld",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:webpack\" \"npm run dev:electron\"",
    "dev:webpack": "cross-env NODE_ENV=development webpack serve --config webpack.config.js",
    "dev:electron": "cross-env NODE_ENV=development ELECTRON_START_URL=http://localhost:8080 electron .",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "build:electron": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "npm run build && npm run build:electron",
    "test": "jest",
    "test:watch": "jest --watch",
    "test-app": "electron test-app.js",
    "test-settings": "electron test-settings-electron.js",
    "test-game": "electron test-game-electron.js",
    "build:game": "cross-env NODE_ENV=development webpack --config webpack.game.config.js",
    "build:game:prod": "cross-env NODE_ENV=production webpack --config webpack.game.config.js",
    "watch:game": "cross-env NODE_ENV=development webpack --config webpack.game.config.js --watch",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,tsx,json,css,scss}'"
  },
  "author": "TerraFlux Team",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.6.8",
    "clsx": "^2.1.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^11.0.8",
    "immer": "^10.0.4",
    "lodash": "^4.17.21",
    "pixi.js": "^7.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.1",
    "react-router-dom": "^6.22.3",
    "redux": "^4.2.1",
    "socket.io-client": "^4.7.1",
    "styled-components": "^6.1.8",
    "uuid": "^9.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.4.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.0",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "dotenv-webpack": "^8.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.6.1",
    "mini-css-extract-plugin": "^2.8.1",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.2.5",
    "react-refresh": "^0.14.0",
    "sass": "^1.72.0",
    "sass-loader": "^14.1.1",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "url-loader": "^4.1.1",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  },
  "build": {
    "appId": "com.terraflux.app",
    "productName": "TerraFlux",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "build/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
